{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cconfigure",
            "type": "cmake",
            "command": "configure"
        },
        {
            "label": "cbuild",
            "type": "cmake",
            "command": "build",
            "dependsOn": [
                "cconfigure",
            ]
        },
        {
            "label": "ExecutedProgram",
            "type": "shell",
            "command": "bash",
            "group": "build",
            "args": [
                "${workspaceFolder}/.vscode/remote.sh",
                "root",
                "192.168.250.2",
                "-R"
            ],
            "dependsOn": [
                "cbuild"
            ],
            "isBackground": true,
            "presentation": {
                "clear": true,
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": ".",
                    }
                }
            ]
        }
    ]
}